document.addEventListener('DOMContentLoaded', function() {
            const params = new URLSearchParams(window.location.search);
            const id = params.get('id');
            const microareas = JSON.parse(localStorage.getItem('microareas')) || [];
            const microarea = microareas.find(area => area.id === id);

            if (microarea) {
                document.getElementById('bairroTitulo').textContent = microarea.nome;
                
            } else {
                alert('Microárea não encontrada!');
            }
});